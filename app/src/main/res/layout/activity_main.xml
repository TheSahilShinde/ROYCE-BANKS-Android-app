<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dip"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="#CC0000"
        android:src="@drawable/img_white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC0000"
        android:fontFamily="monospace"
        android:gravity="center_horizontal"
        android:padding="5dip"
        android:text="Royce Banks"
        android:textColor="@color/white"
        android:textSize="30dip"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC0000"
        android:gravity="right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:gravity="right"
            android:background="@drawable/white_border"
            android:paddingTop="7dip"
            android:paddingLeft="7dip"
            android:text="~TheSahilShinde  "
            android:textColor="@color/white"
            android:textSize="18dip"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:text="Welcome"
        android:textColor="#CC0000"
        android:textSize="25dip"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dip"
        android:text="Sign in to Continue"
        android:textColor="#666666"
        android:textSize="19dip"
        android:textStyle="bold"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        >
        <TableRow
            android:layout_marginTop="40dip"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="Account No:"
                android:textColor="@color/black"
                android:textSize="20dip"
                />

            <EditText
                android:id="@+id/l_e_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:hint=""
                android:inputType="number"
                android:padding="10dip" />

        </TableRow>

        <TableRow
            android:layout_marginTop="50dip"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="Password:"
                android:textColor="@color/black"
                android:textSize="20dip"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:hint=""
                android:id="@+id/l_e_password"
                android:padding="10dip"
                android:inputType="textPassword"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="right">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dip"
            android:backgroundTint="#CC0000"
            android:textSize="15dip"
            android:text="Forget Password"
            android:id="@+id/l_b_forget"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dip"
            android:backgroundTint="#CC0000"
            android:text="Login"
            android:id="@+id/l_b_login"
            android:textSize="15dip"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dip"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="60dip"
            android:layout_marginRight="15dip"
            android:text="New user?"
            android:textColor="@color/black"
            android:textSize="15dip"
            />


        <Button
            android:id="@+id/l_b_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dip"
            android:layout_marginRight="15dip"
            android:backgroundTint="#CC0000"
            android:text="Register"
            android:textSize="15dip"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>