<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dip"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="#CC0000"
        android:src="@drawable/img_white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC0000"
        android:fontFamily="monospace"
        android:gravity="center_horizontal"
        android:padding="5dip"
        android:text="Royce Banks"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC0000"
        android:gravity="right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:gravity="right"
            android:background="@drawable/white_border"
            android:paddingTop="7dip"
            android:paddingLeft="7dip"
            android:text="~TheSahilShinde  "
            android:textColor="@color/white"
            android:textSize="18dip"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:text="Forget Password"
        android:textColor="#CC0000"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="30dip"
        android:text="All fields are mandatory!"
        android:textColor="#666666"
        android:textSize="15sp"
        />

    <TableLayout
        android:layout_marginRight="7dp"
        android:background="@drawable/border"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:paddingTop="7dp"
        android:paddingLeft="8dp"
        android:paddingRight="5dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="15dip"
        android:stretchColumns="1"
        >

        <TableRow
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account no:"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/f_e_account"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                />

        </TableRow>

        <TableRow
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/f_e_password"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:inputType="textPassword"
                />

        </TableRow>

        <TableRow
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm pass:"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/f_e_confirm"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:inputType="textPassword"
                />

        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        >

        <Button
            android:id="@+id/f_b_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginRight="30dp"
            android:backgroundTint="#CC0000"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/f_b_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send OTP"
            android:layout_marginRight="40dp"
            android:backgroundTint="#CC0000"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            />



    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="20dip"
        android:stretchColumns="1"
        android:id="@+id/f_t_otp"
        android:visibility="invisible"
        >

        <TableRow
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter OTP:"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/f_e_enter"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                />

        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:id="@+id/f_b_otp"
        android:visibility="invisible"
        >

        <Button
            android:id="@+id/f_b_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginRight="130dp"
            android:backgroundTint="#CC0000"
            android:layout_marginTop="25dp"
            android:textStyle="bold"

            />

    </LinearLayout>


</LinearLayout>