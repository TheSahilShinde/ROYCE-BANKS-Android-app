<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dip"


    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="85dip"
        android:background="#CC0000"
        android:src="@drawable/img_white"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC0000"
        android:fontFamily="monospace"
        android:gravity="center_horizontal"
        android:padding="5dip"
        android:text="Royce Banks"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC0000"
        android:gravity="right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:gravity="right"
            android:background="@drawable/white_border"
            android:paddingTop="7dip"
            android:paddingLeft="7dip"
            android:text="~TheSahilShinde  "
            android:textColor="@color/white"
            android:textSize="18dip"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_ham"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#CC0000"
            android:text="Withdraw"
            android:id="@+id/btn_withdraw"
            android:layout_marginTop="5dip"
            android:layout_marginRight="10dip"
            android:layout_marginLeft="10dip"
            />

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btn_deposit"
            android:layout_height="wrap_content"
            android:backgroundTint="#CC0000"
            android:text="Deposit"
            android:layout_marginTop="5dip"
            android:layout_marginRight="10dip"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_view_balance"
            android:backgroundTint="#CC0000"
            android:text="View Balance"
            android:layout_marginTop="5dip"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_ham_2"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#CC0000"
            android:id="@+id/btn_transfer"
            android:text="Transfer"
            android:layout_marginRight="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:id="@+id/btn_change_pass"
            android:backgroundTint="#CC0000"
            android:text="Change Pass"
            android:layout_marginTop="5dip"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_contact"
            android:backgroundTint="#CC0000"
            android:text="Contact"
            android:layout_marginTop="5dip"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_ham_3"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_marginLeft="10dip"
            android:id="@+id/btn_profile"
            android:backgroundTint="#CC0000"
            android:text="Profile"
            android:layout_marginTop="5dip"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_logout"
            android:backgroundTint="#CC0000"
            android:text="Logout"
            android:layout_marginTop="5dip"
            />

    </LinearLayout>

        <LinearLayout
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="10dip">

            <FrameLayout android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/view_withdraw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dip"
                        android:text="Withdraw"
                        android:textColor="#CC0000"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1"

                        >

                        <TableRow
                            android:layout_marginTop="40dip"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dip"

                                android:text="Amount:"
                                android:textColor="@color/black"
                                android:textSize="20dip"


                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dip"
                                android:hint=""
                                android:inputType="numberDecimal"
                                android:padding="10dip" />

                        </TableRow>

                        <TableRow
                            android:layout_marginTop="50dip"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dip"
                                android:text="Password:"
                                android:textColor="@color/black"
                                android:textSize="20dip"


                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dip"
                                android:hint=""
                                android:padding="10dip"
                                android:inputType="textPassword"/>

                        </TableRow>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginTop="20dip"
                            >

                            <Button
                                android:id="@+id/button_back_withdraw"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Refresh"
                                android:layout_marginRight="25dp"
                                android:backgroundTint="#CC0000"
                                android:layout_marginTop="20dp"
                                android:textStyle="bold"
                                />

                            <Button
                                android:id="@+id/button_submit_withdraw"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Submit"
                                android:layout_marginRight="25dp"
                                android:backgroundTint="#CC0000"
                                android:layout_marginTop="20dp"
                                android:textStyle="bold"

                                />


                        </LinearLayout>


                    </TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_Deposit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dip"
                        android:text="Deposit"
                        android:textColor="#CC0000"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1"

                        >

                        <TableRow
                            android:layout_marginTop="40dip"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dip"

                                android:text="Amount:"
                                android:textColor="@color/black"
                                android:textSize="20dip"


                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dip"
                                android:hint=""
                                android:inputType="numberDecimal"
                                android:padding="10dip" />

                        </TableRow>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginTop="20dip"
                            >

                            <Button
                                android:id="@+id/button_refresh_depost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Refresh"
                                android:layout_marginRight="25dp"
                                android:backgroundTint="#CC0000"
                                android:layout_marginTop="20dp"
                                android:textStyle="bold"
                                />

                            <Button
                                android:id="@+id/button_submit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Submit"
                                android:layout_marginRight="25dp"
                                android:backgroundTint="#CC0000"
                                android:layout_marginTop="20dp"
                                android:textStyle="bold"

                                />


                        </LinearLayout>


                    </TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_balance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dip"
                        android:text="View Balance"
                        android:textColor="#CC0000"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1"

                        >

                        <TableRow
                            android:layout_marginTop="40dip"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dip"

                                android:text="Balance:"
                                android:textColor="@color/black"
                                android:textSize="20dip"


                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dip"
                                android:text="xxx"
                                android:padding="10dip" />

                        </TableRow>






                    </TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dip"
                        android:text="Transfer"
                        android:textColor="#CC0000"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1"

                        >

                        <TableRow
                            android:layout_marginTop="40dip"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dip"

                                android:text="Account no:"
                                android:textColor="@color/black"
                                android:textSize="20dip"


                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dip"
                                android:hint=""
                                android:inputType="number"
                                android:padding="10dip" />

                        </TableRow>

                        <TableRow
                            android:layout_marginTop="50dip"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dip"
                                android:text="Amount:"
                                android:textColor="@color/black"
                                android:textSize="20dip"


                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dip"
                                android:hint=""
                                android:padding="10dip"
                                android:inputType="numberDecimal"/>

                        </TableRow>

                        <TableRow
                            android:layout_marginTop="40dip"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dip"

                                android:text="Password:"
                                android:textColor="@color/black"
                                android:textSize="20dip"


                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dip"
                                android:hint=""
                                android:inputType="textPassword"
                                android:padding="10dip" />

                        </TableRow>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginTop="20dip"
                            >

                            <Button
                                android:id="@+id/button_back_transfer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Refresh"
                                android:layout_marginRight="25dp"
                                android:backgroundTint="#CC0000"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                />

                            <Button
                                android:id="@+id/button_submit_transfer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Submit"
                                android:layout_marginRight="25dp"
                                android:backgroundTint="#CC0000"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"

                                />


                        </LinearLayout>


                    </TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dip"
                        android:text="Change Password"
                        android:textColor="#CC0000"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1"

                        >

                        <TableRow
                            android:layout_marginTop="40dip"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dip"

                                android:text="Old Password:"
                                android:textColor="@color/black"
                                android:textSize="20dip"


                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dip"
                                android:hint=""
                                android:inputType="textPassword"
                                android:padding="10dip" />

                        </TableRow>

                        <TableRow
                            android:layout_marginTop="50dip"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dip"
                                android:text="New Password:"
                                android:textColor="@color/black"
                                android:textSize="20dip"


                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dip"
                                android:hint=""
                                android:padding="10dip"
                                android:inputType="textPassword"/>

                        </TableRow>

                        <TableRow
                            android:layout_marginTop="40dip"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dip"

                                android:text="Confirm pass:"
                                android:textColor="@color/black"
                                android:textSize="20dip"


                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dip"
                                android:hint=""
                                android:inputType="textPassword"
                                android:padding="10dip" />

                        </TableRow>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginTop="20dip"
                            >

                            <Button
                                android:id="@+id/button_back_change_pass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Refresh"
                                android:layout_marginRight="25dp"
                                android:backgroundTint="#CC0000"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                />

                            <Button
                                android:id="@+id/button_submit_change_pass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Submit"
                                android:layout_marginRight="25dp"
                                android:backgroundTint="#CC0000"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"

                                />


                        </LinearLayout>


                    </TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/view_contact"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"

                        android:textSize="30sp"
                        android:textColor="@color/black"


                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/view_profile"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"

                        android:textSize="30sp"
                        android:textColor="@color/black"


                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/view_logout"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"

                    >
                    <TextView
                        android:layout_marginTop="150dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm Logout ?"
                        android:textSize="30sp"
                        android:textColor="@color/black"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dip"
                        android:gravity="center_horizontal"
                        >

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Back"
                            android:layout_marginRight="30dip"
                            android:backgroundTint="#CC0000"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YES"
                            android:backgroundTint="#CC0000"/>

                    </LinearLayout>


                </LinearLayout>




            </FrameLayout>



        </LinearLayout>


    </LinearLayout>





